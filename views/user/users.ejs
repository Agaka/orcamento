<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
    <style>
        table, td, th {
            border: solid #000 2px;
            border-collapse: collapse;
        }

    </style>
</head>
<body>
    <a href="/users/insert">Cadastrar usuários</a>
    <h1>Lista de usuários</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Senha</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach((user, index) => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.password %></td>
                    <td><a href="users/delete/<%= user.id %>">Excluir</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>